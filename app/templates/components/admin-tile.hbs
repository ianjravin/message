<div class="each-question">
  <h3>{{question.authorQ}}<span class="question-author"> &nbsp; asked by <strong>{{question.author}}</strong></span></h3>
  <div class="edit-delete">
    <h5>
      {{update-question question=question update="update"}}
      <button class="delete pull-right" {{action 'delete' question}}><i class="fa fa-trash" aria-hidden="true"></i>
</button>
    </h5>
  </div>
  <br>
</div>
