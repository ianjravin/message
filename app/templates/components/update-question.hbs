{{#if updateQuestionForm}}
  <div class="new-question-form">
    <h3>Edit</h3>
    <form>
      <div class="form-group">
        {{input class="form-control" value=author id="author" placeholder=question.author }}
      </div>
      <div class="form-group">
        {{input class="form-control" value=authorQ id="authorQ" placeholder=question.authorQ }}
      </div>
      <div class="form-group">
        {{input class="form-control" value=notes id="notes" placeholder=question.notes }}
      </div>
      <button {{action 'update' question}} class="btn btn-default center-block">Save</button>
    </form>
  </div>
{{else}}
  <button class="edit pull-right" {{action 'updateQuestionForm'}}><i class="fa fa-pencil" aria-hidden="true"></i>
</button>
{{/if}}
